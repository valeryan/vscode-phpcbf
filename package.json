{
    "name": "vscode-phpcbf",
    "displayName": "phpcbf",
    "description": "PHP Code Beautifier & Fixer for Visual StudioCode",
    "version": "1.1.4",
    "icon": "phpcbf.png",
    "publisher": "ValeryanM",
    "homepage": "https://github.com/valeryan/vscode-phpcbf",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/valeryan/vscode-phpcbf.git"
    },
    "bugs": {
        "url": "https://github.com/valeryan/vscode-phpcbf/issues"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Formatters",
        "Linters",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:php"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "phpcbf.fix",
                "title": "PHPCBF: Fix this file",
                "when": "!inOutput && editorFocus && editorLangId == php"
            }
        ],
        "configuration": {
            "title": "PHPCBF Configuration options",
            "type": "object",
            "properties": {
                "phpcbf.snifferMode": {
                    "scope": "resource",
                    "type": "string",
                    "default": "onSave",
                    "enum": [
                        "onSave",
                        "onType"
                    ],
                    "markdownDescription": "When to run `phpcs`."
                },
                "phpcbf.snifferTypeDelay": {
                    "scope": "resource",
                    "type": "number",
                    "default": 250,
                    "minimum": 0,
                    "markdownDescription": "When `phpSniffer.run` is `onType`, this sets the amount of milliseconds the validator will wait after typing has stopped before it will run."
                },
                "phpcbf.snifferEnable": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Control if experimental phpcs support is enabled."
                },
                "phpcbf.snifferShowSources": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "Control if phpcs report should include sniff sources."
                },
                "phpcbf.enable": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Control if phpcbf is enabled for PHP files or not."
                },
                "phpcbf.executablePathCBF": {
                    "scope": "resource",
                    "type": "string",
                    "default": null,
                    "description": "Optional. The default path to the phpcbf executable. Can be overridden if auto search is enabled."
                },
                "phpcbf.executablePathCS": {
                    "scope": "resource",
                    "type": "string",
                    "default": null,
                    "description": "Optional. The default path to the phpcs executable. Can be overridden if auto search is enabled."
                },
                "phpcbf.composerJsonPath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "composer.json",
                    "description": "The path to composer.json"
                },
                "phpcbf.standard": {
                    "scope": "resource",
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Optional. The default config to use or global standard. Can be overridden if auto search is enabled."
                },
                "phpcbf.autoConfigSearch": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically search for a ruleset file to use as configuration. Overrides custom standards defined above."
                },
                "phpcbf.allowedAutoRulesets": {
                    "scope": "resource",
                    "type": "array",
                    "default": [
                        ".phpcs.xml",
                        ".phpcs.xml.dist",
                        "phpcs.xml",
                        "phpcs.xml.dist",
                        "phpcs.ruleset.xml",
                        "ruleset.xml"
                    ],
                    "description": "Filenames to search for that contain rulesets for fixers."
                },
                "phpcbf.debug": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": false,
                    "description": "Write phpcbf stdout to the console"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "cross-spawn": "^6.0.5",
        "lodash": "^4.0.8"
    },
    "devDependencies": {
        "@types/cross-spawn": "^6.0.0",
        "@types/lodash": "^4.0.6",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.2",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.34",
        "vscode-languageserver": "^5.2.1",
        "vscode-uri": "^1.0.6"
    }
}
